{
  "name": "cukerust",
  "displayName": "CukeRust",
  "description": "Zero‑config Gherkin × Rust BDD for VS Code",
  "version": "0.1.0",
  "private": true,
  "publisher": "Veighnsche",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/veighnsche/cukerust.git"
  },
  "homepage": "https://github.com/veighnsche/cukerust",
  "bugs": { "url": "https://github.com/veighnsche/cukerust/issues" },
  "engines": { "vscode": "^1.92.0" },
  "categories": ["Programming Languages", "Testing", "Other"],
  "main": "./out/extension.js",
  "icon": "images/LOGO.png",
  "galleryBanner": { "color": "#111111", "theme": "dark" },
  "keywords": ["gherkin", "cucumber", "bdd", "rust", "testing", "feature", "steps"],
  "activationEvents": [
    "onLanguage:feature",
    "onLanguage:gherkin",
    "onLanguage:cucumber",
    "onCommand:cukerust.rebuildIndex",
    "onCommand:cukerust.rebuildStatic",
    "onCommand:cukerust.dev.extractIndex",
    "onCommand:cukerust.dev.matchBenchmark",
    "onCommand:cukerust.runScenario",
    "onCommand:cukerust.clearAmbiguityMemory",
    "onCommand:cukerust.listStepsViaRunner",
    "onCommand:cukerust.openOutput",
    "onCommand:cukerust.openHealthReport",
    "onCommand:cukerust.quickStart"
  ],
  "contributes": {
    "languages": [
      {
        "id": "feature",
        "aliases": ["Gherkin", "feature"],
        "extensions": [".feature"]
      }
    ],
    "grammars": [
      {
        "language": "feature",
        "scopeName": "source.gherkin",
        "path": "./syntaxes/gherkin.tmLanguage.json"
      },
      {
        "scopeName": "cukerust.gherkin.injections",
        "path": "./syntaxes/gherkin-injections.tmLanguage.json",
        "injectTo": [
          "source.gherkin",
          "text.gherkin",
          "text.gherkin.feature"
        ]
      }
    ],
    "commands": [
      {
        "command": "cukerust.rebuildIndex",
        "title": "CukeRust: Rebuild Step Index"
      },
      {
        "command": "cukerust.dev.extractIndex",
        "title": "CukeRust: Dev — Extract Step Index (Fixture)"
      },
      {
        "command": "cukerust.dev.matchBenchmark",
        "title": "CukeRust: Dev — Match Micro Benchmark"
      },
      {
        "command": "cukerust.rebuildStatic",
        "title": "CukeRust: Force Static Scan Rebuild"
      },
      {
        "command": "cukerust.runScenario",
        "title": "CukeRust: Run Scenario"
      },
      {
        "command": "cukerust.clearAmbiguityMemory",
        "title": "CukeRust: Clear Ambiguity Choices"
      },
      {
        "command": "cukerust.listStepsViaRunner",
        "title": "CukeRust: List Steps via Runner"
      },
      {
        "command": "cukerust.openOutput",
        "title": "CukeRust: Open Output"
      },
      {
        "command": "cukerust.openHealthReport",
        "title": "CukeRust: Open Health Report"
      },
      {
        "command": "cukerust.quickStart",
        "title": "CukeRust: Quick Start (Create Sample Feature)"
      }
    ],
    "configuration": {
      "title": "CukeRust",
      "properties": {
        "cukerust.discovery.mode": {
          "type": "string",
          "enum": ["auto", "static-scan", "artifact", "runtime-list"],
          "default": "auto",
          "description": "Discovery mode for steps"
        },
        "cukerust.index.path": {
          "type": "string",
          "default": "docs/cukerust/step_index.json",
          "description": "Path to step_index.json for Artifact mode"
        },
        "cukerust.runMatrix.path": {
          "type": "string",
          "default": "docs/cukerust/run_matrix.md",
          "description": "Path to run_matrix.md"
        },
        "cukerust.goToDef.preferSingle": {
          "type": "boolean",
          "default": false,
          "description": "Prefer first candidate on go-to-definition when multiple matches exist"
        },
        "cukerust.regex.matchMode": {
          "type": "string",
          "enum": ["anchored", "smart", "substring"],
          "default": "smart",
          "description": "Matching mode for regexes"
        },
        "cukerust.dialect": {
          "type": "string",
          "enum": ["auto", "en", "es"],
          "default": "auto",
          "description": "Gherkin dialect (auto detects via # language: header)"
        },
        "cukerust.ignoreGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Extra globs to ignore during static scan"
        },
        "cukerust.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics in feature files"
        },
        "cukerust.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable completion items in feature files"
        },
        "cukerust.statusbar.showMode": {
          "type": "boolean",
          "default": true,
          "description": "Show discovery mode and active root in status bar"
        },
        "cukerust.run.template": {
          "type": "string",
          "default": "echo Running ${scenarioName} in ${featurePath}",
          "description": "Run command template with placeholders: ${featurePath}, ${scenarioName}, ${tags}"
        },
        "cukerust.runtimeList.command": {
          "type": "string",
          "default": "",
          "description": "Shell command to list steps as JSON StepIndex (Runtime-List mode)."
        }
      }
    },
    "configurationDefaults": {
      "[feature]": {
        "editor.semanticHighlighting.enabled": true
      },
      "[gherkin]": {
        "editor.semanticHighlighting.enabled": true
      },
      "[cucumber]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "scripts": {
    "build:wasm": "wasm-pack build ../rust/crates/cukerust_wasm --target nodejs --release --out-dir ../../../extension/native/cukerust-wasm",
    "build:ts": "tsup src/extension.ts src/test/runTest.ts src/test/suite/runner.ts src/test/suite/extension.test.ts --format=cjs --out-dir out --external vscode --external mocha",
    "build": "npm run build:wasm && npm run build:ts",
    "test": "vitest run",
    "test:int": "node ./out/test/runTest.js",
    "lint": "eslint .",
    "package": "vsce package"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.2",
    "@types/node": "^20.14.2",
    "@types/vscode": "^1.92.0",
    "@vscode/vsce": "^3.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^9.0.0",
    "vitest": "^2.0.0",
    "mocha": "^10.2.0"
  },
  "files": ["out/**", "native/**", "images/**", "syntaxes/**", "README.md", "CHANGELOG.md", "LICENSE*"]
}
